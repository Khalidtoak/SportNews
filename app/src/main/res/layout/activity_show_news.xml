<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/show_news_detail"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        tools:context=".ui.ShowNews">
<ImageView android:layout_width="match_parent"
           android:layout_height="250dp"
           android:layout_margin="10dp"
           android:scaleType="centerCrop"
           android:id="@+id/show_news_image"

/>
    <TextView android:text="News Title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_gravity="center|top"
              android:id="@+id/show_news_title"
              android:textStyle="bold"
              android:textSize="23sp"

    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
    >
        <TextView android:text="Goal.com"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|top"
                  android:id="@+id/show_news_source"
                  android:textStyle="italic"
                  android:textSize="20sp"

        />
        <TextView android:text="21-12-1984 00:14 GMT"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center|top"
                  android:id="@+id/show_news_date"
                  android:textStyle="italic"
                  android:layout_marginLeft="5dp"
                  android:textSize="15sp"

        />
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/show_news_desc"
              android:textSize="20sp"
              android:layout_marginTop="10dp"
              android:text="This is news description"
    />


</LinearLayout>